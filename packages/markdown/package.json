{
  "name": "@monorepo/markdown",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf .turbo coverage dist node_modules",
    "clean:cache": "rimraf .turbo coverage dist",
    "prebuild": "rm -rf dist",
    "build": "pnpm prebuild && tsc --project tsconfig.build.json",
    "tsc": "pnpm tsc:src && pnpm tsc:spec",
    "tsc:src": "tsc --noEmit -p tsconfig.build.json",
    "tsc:spec": "tsc --noEmit -p tsconfig.spec.json",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "pnpm lint:eslint",
    "lint:fix": "pnpm lint:eslint:fix",
    "lint:eslint": "eslint src --config eslint.config.mjs --max-warnings 0",
    "lint:eslint:fix": "pnpm lint:eslint --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@monorepo/eslint-config": "workspace:*",
    "@monorepo/typescript-config": "workspace:*",
    "@tiptap/pm": "catalog:",
    "@types/katex": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@types/markdown-it": "^14.0.0",
    "markdown-it": "^14.0.0",
    "prosemirror-markdown": "^1.13.0",
    "prosemirror-model": "^1.25.4"
  },
  "peerDependenciesMeta": {
    "@types/markdown-it": {
      "optional": true
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --config eslint.config.mjs"
    ]
  },
  "volta": {
    "extends": "../../package.json"
  },
  "dependencies": {
    "katex": "catalog:",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-texmath": "^1.0.0"
  }
}
