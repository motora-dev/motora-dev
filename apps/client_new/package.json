{
  "name": "@monorepo/client-new",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "clean": "rimraf .angular .turbo coverage dist node_modules",
    "build": "ng build",
    "start": "ng serve",
    "start:ssr": "node dist/client_new/server/server.mjs",
    "check-all": "pnpm lint && pnpm format && pnpm tsc && pnpm test",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --config eslint.config.mjs",
    "lint:fix": "pnpm lint --fix",
    "tsc": "pnpm tsc:build && pnpm tsc:test",
    "tsc:build": "tsc --noEmit --project tsconfig.build.json",
    "tsc:test": "tsc --noEmit --project tsconfig.spec.json",
    "test": "CI=true ng test",
    "test:coverage": "CI=true ng test --coverage",
    "test:watch": "ng test",
    "storybook": "ng run client_new:storybook",
    "build-storybook": "ng run client_new:build-storybook"
  },
  "dependencies": {
    "@angular/cdk": "catalog:",
    "@angular/common": "catalog:",
    "@angular/compiler": "catalog:",
    "@angular/core": "catalog:",
    "@angular/forms": "catalog:",
    "@angular/platform-browser": "catalog:",
    "@angular/platform-server": "catalog:",
    "@angular/router": "catalog:",
    "@angular/ssr": "catalog:",
    "@monorepo/error-code": "workspace:*",
    "@monorepo/markdown": "workspace:*",
    "@ngx-translate/core": "^17.0.0",
    "@ngxs/form-plugin": "catalog:",
    "@ngxs/store": "catalog:",
    "@rx-angular/cdk": "catalog:",
    "@rx-angular/isr": "catalog:",
    "@rx-angular/template": "catalog:",
    "class-variance-authority": "catalog:",
    "clsx": "catalog:",
    "compression": "^1.8.1",
    "express": "^4.21.0",
    "hast-util-to-html": "^9.0.5",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.25",
    "lowlight": "^3.3.0",
    "rxjs": "catalog:",
    "tailwind-merge": "catalog:",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "catalog:",
    "@angular/cli": "catalog:",
    "@angular/compiler-cli": "catalog:",
    "@monorepo/eslint-config": "workspace:*",
    "@monorepo/typescript-config": "workspace:*",
    "@storybook/angular": "catalog:",
    "@tailwindcss/postcss": "catalog:",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/angular": "^18.1.1",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.21",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "jsdom": "catalog:",
    "postcss": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "storybook": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix --config eslint.config.mjs"
    ]
  },
  "volta": {
    "extends": "../../package.json"
  }
}
