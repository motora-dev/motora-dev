generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id        Int      @id @default(autoincrement())
  publicId  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    Int
  provider  String
  sub       String
  email     String
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, sub])
  @@index([email])
}

model Article {
  id           Int            @id @default(autoincrement())
  publicId     String         @unique
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  title        String
  tags         String[]
  status       ArticleStatus  @default(NEW)
  description  String?
  userId       Int
  User         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  ArticleMedia ArticleMedia[]
  Page         Page[]

  @@index([tags])
  @@index([userId])
}

model ArticleMedia {
  publicId  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime
  articleId Int
  mediaId   Int
  Article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  Media     Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@id([articleId, mediaId])
  @@index([mediaId])
}

model Media {
  id           Int            @id @default(autoincrement())
  publicId     String         @unique
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  userId       Int
  type         MediaType
  mimeType     String
  fileName     String
  extension    String
  filePath     String         @unique
  ArticleMedia ArticleMedia[]
  User         User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Page {
  id          Int      @id @default(autoincrement())
  publicId    String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  articleId   Int
  title       String
  content     String
  level       Int
  order       Int
  description String
  Article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([articleId])
}

model User {
  id        Int       @id @default(autoincrement())
  publicId  String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime
  name      String?
  email     String    @unique
  Account   Account[]
  Article   Article[]
  Media     Media[]
}

enum ArticleStatus {
  NEW
  DRAFT
  PUBLIC
}

enum MediaType {
  IMAGE
}
