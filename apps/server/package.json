{
  "name": "@monorepo/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "prisma generate",
    "clean": "find . -type d \\( -name \".turbo\" -o -name \"dist\" -o -name \"coverage\" -o -name \"node_modules\" \\) -prune -exec rm -rf '{}' +",
    "build": "nest build --path tsconfig.build.json",
    "start": "nest start --debug --watch --path tsconfig.debug.json --debug=0.0.0.0:9230",
    "start:prd": "node ./dist/main.js",
    "tsc": "pnpm tsc:src && pnpm tsc:spec",
    "tsc:src": "tsc --noEmit -p tsconfig.build.json",
    "tsc:spec": "tsc --noEmit -p tsconfig.spec.json",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "pnpm lint:eslint",
    "lint:fix": "pnpm lint:eslint:fix",
    "lint:eslint": "eslint src --config eslint.config.mjs --max-warnings 0",
    "lint:eslint:fix": "pnpm lint:eslint --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "COLLECT_COVERAGE=true vitest run --coverage",
    "seed": "ts-node -r tsconfig-paths/register prisma/seed/upsert-articles.ts"
  },
  "dependencies": {
    "@monorepo/error-code": "workspace:*",
    "@nestjs/common": "catalog:",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "catalog:",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "catalog:",
    "@nestjs/throttler": "^6.0.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "catalog:",
    "@prisma/client-runtime-utils": "^7.0.0",
    "@supabase/supabase-js": "catalog:",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^4.0.3",
    "express-session": "^1.18.2",
    "google-auth-library": "catalog:",
    "gray-matter": "^4.0.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "catalog:"
  },
  "devDependencies": {
    "@monorepo/eslint-config": "workspace:*",
    "@monorepo/typescript-config": "workspace:*",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "catalog:",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.2",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "catalog:",
    "dotenv": "^17.2.3",
    "prisma": "catalog:",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "vitest": "catalog:"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --config eslint.config.mjs"
    ]
  },
  "volta": {
    "extends": "../../package.json"
  }
}
