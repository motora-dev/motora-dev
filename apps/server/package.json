{
  "name": "@monorepo/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf .tsbuildinfo .turbo coverage dist node_modules",
    "build": "node esbuild.config.mjs",
    "start": "node esbuild.config.mjs --watch --debug",
    "start:prd": "node dist/main.js",
    "check-all": "pnpm lint && pnpm format && pnpm tsc && pnpm test",
    "format": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --config eslint.config.mjs",
    "lint:fix": "pnpm lint --fix",
    "tsc": "pnpm tsc:build && pnpm tsc:test",
    "tsc:build": "tsc --noEmit --project tsconfig.build.json",
    "tsc:test": "tsc --noEmit --project tsconfig.spec.json",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:e2e": "vitest run --project e2e",
    "test:coverage": "vitest run --project unit --coverage"
  },
  "dependencies": {
    "@monorepo/database": "workspace:*",
    "@monorepo/error-code": "workspace:*",
    "@nestjs/common": "catalog:",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "catalog:",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "catalog:",
    "@nestjs/throttler": "^6.0.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/adapter-pg": "catalog:",
    "@prisma/client": "catalog:",
    "@prisma/client-runtime-utils": "catalog:",
    "@supabase/supabase-js": "catalog:",
    "cookie-parser": "^1.4.7",
    "csrf-csrf": "^4.0.3",
    "express-session": "^1.18.2",
    "google-auth-library": "catalog:",
    "gray-matter": "^4.0.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "catalog:"
  },
  "devDependencies": {
    "@monorepo/eslint-config": "workspace:*",
    "@monorepo/typescript-config": "workspace:*",
    "@nestjs/cli": "catalog:",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "catalog:",
    "@swc/core": "catalog:",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.2",
    "@vitest/coverage-v8": "catalog:",
    "dotenv": "^17.2.3",
    "esbuild": "catalog:",
    "rimraf": "catalog:",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "unplugin-swc": "catalog:",
    "vitest": "catalog:",
    "vite": "catalog:"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix --config eslint.config.mjs"
    ]
  },
  "volta": {
    "extends": "../../package.json"
  }
}
