{
  "extends": "@monorepo/typescript-config",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "$prisma/client": ["src/generated/prisma-client/client"],
      "$adapters": ["src/shared/adapters"],
      "$decorators": ["src/shared/decorators"],
      "$domains/*": ["src/domains/*"],
      "$exceptions": ["src/shared/exceptions"],
      "$filters": ["src/shared/filters"],
      "$guards": ["src/shared/guards"],
      "$interceptors": ["src/shared/interceptors"],
      "$modules/*": ["src/modules/*"],
      "$shared/*": ["src/shared/*"],
      "$utils": ["src/shared/utils"]
    }
  },
  "references": [{ "path": "./tsconfig.build.json" }, { "path": "./tsconfig.spec.json" }]
}
