{
  "extends": "@monorepo/typescript-config",
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "$prisma/client": ["src/generated/prisma-client/client"],
      "$adapters": ["src/shared/adapters/index"],
      "$decorators": ["src/shared/decorators/index"],
      "$domains/*": ["src/domains/*"],
      "$exceptions": ["src/shared/exceptions/index"],
      "$filters": ["src/shared/filters/index"],
      "$guards": ["src/shared/guards/index"],
      "$interceptors": ["src/shared/interceptors/index"],
      "$modules/*": ["src/modules/*"],
      "$shared/*": ["src/shared/*"],
      "$utils": ["src/shared/utils/index"]
    }
  },
  "references": [{ "path": "./tsconfig.build.json" }, { "path": "./tsconfig.spec.json" }]
}
